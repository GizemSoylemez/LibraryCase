@model List<Book>
@{
    ViewData["Title"] = "ListBook";
}

    <table border="1">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Author</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Author</td>
                <td><a href="Delete?id=@item.Id">Delete</a> <a href="Edit?id=@item.Id">Edit</a></td>
            </tr>
        }
    </table>
